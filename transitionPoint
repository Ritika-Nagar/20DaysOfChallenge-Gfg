int transitionPoint(int arr[], int n) {
        int i=0;
     int j=n-1;
     int mid=i+(j-i)/2;
     while(i<=j) {
    	 if(arr[mid]==0) {
    		 i=mid+1;
    	 }
    	 else {
    		 j=mid-1;
    	 }
    	 mid=i+(j-i)/2;
     }
     if(i==n) {
    	 return -1;
     }
     if(j==-1) {
    	 return 0;
     }
     return i;
	}
       
}
